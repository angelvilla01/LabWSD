<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>List of Notes in collection</title>
  <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />


</head>

<body>

  <div style="display: flex; align-items: flex-start; gap: 10px;">
    <!-- Botón de Home -->
    <form action="/notes/NoteCollections" method="GET" style="display:inline">
      <button class="go-home-button" type="submit">Home</button>
    </form>

    <!-- Botón de retroceso -->
    <button class="go-back-button" onclick="goBack()">Go back</button>
  
    <script>
      function goBack() {
        window.history.back();
      }
    </script>
  </div>
  <div class="container">
    <div class="text-center">
      <h1>List of Notes in collection</h1>

      <% if (notes.length===0) { %>
        <p>No notes available.</p>
        <% } else { %>
          <ul class="list-group" type="none">
            <% notes.forEach(note=> { %>
              <li class="list-group-item">
                <div class="note-item">
                  <a href="/notes/noteInfo/<%= note.id %>"><strong><%= note.title %></strong></a>
                </div>

                <div class="button-group">
                  <form action="/notes/collections/deleteNote/<%= note.id %>/<%= collectionId %>" method="POST" class="button-form">
                    <button type="submit" class="delete-button">Delete</button>
                  </form>
                </div>
              </li>
              <% }); %>
          </ul>
          <% } %>
        </div>
            <form action="/users/logout" method="GET">
              <button class="delete-button" type="submit">Log Out</button>
            </form>
            
    </div>
  </div>




</script>
  <script src="/node_modules/bootstrap/bootstrap.bundle.min.js"></script>


    <button class="go-back-button" onclick="goBack()">Go Back</button>
    <form action="/notes/NoteCollections" method="GET" class="button-form">
      <button type="submit" class="go-back-button">Home</button>
    </form>
    
    <script>
    function goBack() {
      window.history.back();
    }
    </script>



</body>

</html>