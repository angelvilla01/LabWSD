<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>List of Users</title>
  <link href="/node_modules/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles.css" />
</head>

<body>
  <div class="container">
    <div class="text-center">
      <h1>List of Users</h1>

      <% if (users.length === 0) { %>
        <p>No users available.</p>
      <% } else { %>
        <ul class="list-group" type="none">
          <% users.forEach(user => { %>
            <li class="list-group-item">
              <div class="user-item">
                <strong><%= user.username %></strong>
              </div>

              <div class="button-group">
                <form action="/users/edit/<%= user.id %>" method="GET" class="button-form">
                  <button type="submit" class="edit-button">Edit</button>
                </form>
                <form action="/users/delete/<%= user.id %>" method="POST" class="button-form">
                  <button type="submit" class="delete-button">Delete</button>
                </form>
              </div>
            </li>
          <% }); %>
        </ul>
      <% } %>

      <form action="/users/postUser" method="GET">
        <button class="btn-primary" type="submit">Add User</button>
      </form>
      <form action="/users/logout" method="GET">
        <button class="delete-button" type="submit">Log Out</button>
      </form>
    </div>
  </div>

  <script src="/node_modules/bootstrap/bootstrap.bundle.min.js"></script>
</body>

</html>
