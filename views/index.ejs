<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List of Notes</title>
    <link
      href="/node_modules/bootstrap/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/styles.css" />

  
  </head>
  <body>
    <div class="container">
      <div class="text-center">
        <h1>List of Notes</h1>

        <% if (notes.length === 0) { %>
        <p>No notes available.</p>
        <% } else { %>
        <ul class="list-group" type="none">
          <% notes.forEach(note => { %>
            
          <li class="list-group-item">
            <a href="/notes/noteInfo/<%= note.id %>"><strong><%= note.title %></strong></a>
            <form action="/notes/edit/<%= note.id %>" method="GET" style="display: inline;">
              <button type="submit" class="edit-button">Edit</button>
            </form>
            <form action="/notes/delete/<%= note.id %>" method="POST" style="display: inline;">
              <button type="submit" class="delete-button">Delete</button>
              <input type="checkbox" name="delete-check" value="<%= note.id %>" style="margin-left: 10px;">
            </form>
          </li>
          <% }); %>
        </ul> 
        <% } %>
        <form action="/notes/new" method="GET">
          <button class="btn-primary" type="submit">Add Note</button>
        </form>
      </div>
    </div>


   

    <script src="/node_modules/bootstrap/bootstrap.bundle.min.js"></script>
  </body>
</html>
